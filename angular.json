{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "oppia": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "core/templates/pages/app-page",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/oppia",
            "index": "core/templates/pages/app-page/index.html",
            "main": "core/templates/pages/app-page/main.ts",
            "tsConfig": "tsconfig.json",
            "aot": false,
            "vendorChunk": true,
            "assets": [
              "core/templates/pages/app-page/assets/hashes.json",
              "core/templates/pages/app-page/assets"
            ],
            "sourceMap": true,
            "styles" : [
              "third_party/generated/css/third_party.css",
              "core/templates/css/oppia.css",
              "core/templates/css/oppia-material.css"
            ],
            "scripts": [
              {
                "input" : "third_party/static/jquery-3.5.1/jquery.min.js",
                "inject" : true,
                "bundleName" : "jquery"
              },
              {
                "input" : "third_party/static/jqueryui-1.12.1/jquery-ui.min.js",
                "inject" : true,
                "bundleName" : "jquery-ui"
              },
              {
                "input" : "third_party/static/jquery-ui-touch-punch-0.3.1/jquery.ui.touch-punch-improved.js",
                "inject" : true,
                "bundleName" : "jquery-ui-touch-punch-improved"
              },
              {
                "input" : "third_party/ngx_generated/js/third_party.js",
                "inject": true,
                "bundleName" : "third-party"
              }
            ],
            "poll": 1000
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "core/templates/pages/app-page/environments/environment.ts",
                  "with": "core/templates/pages/app-page/environments/environment.prod.ts"
                }
              ],
              "optimization": {
                "scripts": true,
                "styles": true
              },
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json",
              "tsconfig-strict.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "oppia"
}